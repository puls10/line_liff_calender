<body>
  <h1>ã‚«ãƒ¬ãƒ³ãƒ€ãƒ¼äºˆå®šè¿½åŠ </h1>
  <div id="user"></div>
  <div id="calendar"></div>

  <h2>äºˆå®šä¸€è¦§</h2>
  <ul id="schedule-list"></ul>

  <!-- ãƒ¢ãƒ¼ãƒ€ãƒ« -->
  <div class="modal" id="event-modal">
    <div class="modal-content">
      <h3 id="modal-title">äºˆå®šã‚’è¿½åŠ </h3>
      <input type="text" id="event-input" placeholder="äºˆå®šã®ã‚¿ã‚¤ãƒˆãƒ«ã‚’å…¥åŠ›">
      <div>
        <button id="save-btn">ä¿å­˜</button>
        <button id="delete-btn">å‰Šé™¤</button>
        <button onclick="closeModal()">ã‚­ãƒ£ãƒ³ã‚»ãƒ«</button>
      </div>
    </div>
  </div>

  <script>
    const scheduleList = [];
    let calendar;
    let currentDate = null;
    let currentEvent = null;

    async function init() {
      await liff.init({ liffId: "2007134594-R5KEBJjL" });

      if (!liff.isLoggedIn()) {
        liff.login();
      } else {
        const profile = await liff.getProfile();
        document.getElementById("user").innerText = `ã“ã‚“ã«ã¡ã¯ã€${profile.displayName}ã•ã‚“ï¼`;
        initCalendar();
      }
    }

    function initCalendar() {
      const calendarEl = document.getElementById('calendar');
      calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        locale: 'ja',
        selectable: true,
        editable: true,
        eventClick: function(info) {
          currentEvent = info.event;
          document.getElementById("event-input").value = currentEvent.title;
          document.getElementById("modal-title").innerText = "äºˆå®šã®ç·¨é›†ãƒ»å‰Šé™¤";
          currentDate = currentEvent.startStr;
          document.getElementById("delete-btn").style.display = "inline-block";
          openModal();
        },
        dateClick: function(info) {
          currentDate = info.dateStr;
          currentEvent = null;
          document.getElementById("event-input").value = "";
          document.getElementById("modal-title").innerText = "äºˆå®šã‚’è¿½åŠ ";
          document.getElementById("delete-btn").style.display = "none";
          openModal();
        },
        events: [],
        eventDisplay: "block",
        dayMaxEvents: true
      });
      calendar.render();

      loadHolidays();
    }

    function openModal() {
      document.getElementById("event-modal").style.display = "flex";
    }

    function closeModal() {
      document.getElementById("event-modal").style.display = "none";
    }

    document.getElementById("save-btn").addEventListener("click", () => {
      const title = document.getElementById("event-input").value;
      if (!title) return;

      if (currentEvent) {
        currentEvent.setProp("title", title);
      } else {
        calendar.addEvent({
          title: title,
          start: currentDate
        });
        scheduleList.push({ date: currentDate, event: title });
        renderList();
      }
      closeModal();
    });

    document.getElementById("delete-btn").addEventListener("click", () => {
      if (currentEvent) {
        currentEvent.remove();
      }
      closeModal();
    });

    function renderList() {
      const ul = document.getElementById("schedule-list");
      ul.innerHTML = "";
      scheduleList.forEach(item => {
        const li = document.createElement("li");
        li.innerText = `${item.date} - ${item.event}`;
        ul.appendChild(li);
      });
    }

    // ğŸ‡¯ğŸ‡µ æ—¥æœ¬ã®ç¥æ—¥è¡¨ç¤ºï¼ˆGoogle Calendar APIã¾ãŸã¯JSON APIåˆ©ç”¨ï¼‰
    async function loadHolidays() {
      try {
        const res = await fetch("https://holidays-jp.github.io/api/v1/date.json");
        const holidays = await res.json();
        for (const [date, title] of Object.entries(holidays)) {
          calendar.addEvent({
            title: title,
            start: date,
            display: 'background',
            color: '#ffeaea'
          });
        }
      } catch (e) {
        console.error("ç¥æ—¥ã®å–å¾—ã«å¤±æ•—ã—ã¾ã—ãŸ", e);
      }
    }

    init();
  </script>
